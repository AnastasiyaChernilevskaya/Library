@model Library.Data.Newspaper
@{
    ViewBag.Title = "Add newspaper";
}

<h2>Add newspaper</h2>

<form id="addForm" name="addForm" class="form-horizontal" action="@Url.Action("AddNewspaper", "Newspaper")" method="post" onsubmit="return validateAddForm()">
    <div class="control-group">
        <label class="control-label">Create new Newspaper:</label>
        <div class="controls">

            Newspaper name:<br>
            <input type="text" name="Name"><br>

            Publisher:<br>
            <input type="text" name="Publisher"><br>

            Date of publishing:<br>
            <input type="date" name="YearOfPublishing" min="1700-01-01" max="2017-12-31" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"><br />

            Include to the Page:<br>
            <input type="checkbox" name="IncludeToPage" id="check"><br>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" class="btn btn-primary" value="Save newspaper" />
        </div>
    </div>
</form>
<script src="~/Scripts/Library/AddFormValidator.js"></script>

