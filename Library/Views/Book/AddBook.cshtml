@model Library.ViewModels.AddBookViewModel
@{
    ViewBag.Title = "Add Book";
}

<h2>Add book</h2>
<form class="form-horizontal" action="@Url.Action("AddBook", "MyLibrary")" method="post">
    <div class="control-group">
        <label class="control-label">Name:</label>
        <div class="controls">
            Book name:<br>
            <input type="text" name="BookName"><br>
            Author:<br>
            <input type="text" name="Author">
            Publisher:<br>
            <input type="text" name="Publisher"><br>
            Year of publishing:<br>
            <input type="text" name="YearOfPublishing">
            Include to the Page:<br>
            <input type="checkbox" name="IncludeToPage"><br>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
</form>